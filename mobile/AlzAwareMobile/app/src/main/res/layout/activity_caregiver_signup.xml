<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/etName" android:hint="Ad Soyad"
        android:layout_width="match_parent" android:layout_height="wrap_content" />
    <EditText android:id="@+id/etEmail" android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent" android:layout_height="wrap_content" />
    <EditText android:id="@+id/etPassword" android:hint="Şifre"
        android:inputType="textPassword"
        android:layout_width="match_parent" android:layout_height="wrap_content" />

    <Button android:id="@+id/btnSignup" android:text="KAYIT OL"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/tvGoToLogin"
        android:text="Zaten hesabın var mı? Giriş Yap"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center" />
</LinearLayout>