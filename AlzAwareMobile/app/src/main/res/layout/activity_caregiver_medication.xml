<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/medication_caregiver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".MainActivity">

    <!-- App Name Block -->
    <View
        android:id="@+id/appNameBlock_caregiver"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- App Name Text -->
    <TextView
        android:id="@+id/appNameTextView_caregiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="start|center_vertical"
        android:text="AlzAware"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/appNameBlock_caregiver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/appNameBlock_caregiver"
        app:layout_constraintVertical_bias="0.5" />

    <!-- Scrollable Cards Section -->
    <ScrollView
        android:id="@+id/scrollCards_caregiver"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/appNameBlock_caregiver"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_caregiver"
        android:padding="8dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_caregiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@android:color/holo_blue_bright"
            app:cardCornerRadius="16dp">

            <!-- Linear Layout inside MaterialCardView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Horizontal Layout for Text and Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Title Text -->
                    <TextView
                        android:id="@+id/drug_name_caregiver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donepezil"
                        android:layout_marginRight="34dp"
                        android:layout_weight="1"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:layout_gravity="center_vertical" />

                    <Button
                        android:id="@+id/button_menu_caregiver"
                        style="?attr/materialIconButtonStyle"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        app:iconSize="24dp"
                        app:icon="@drawable/person_pin_circle_24px" />
                </LinearLayout>

                <!-- Description Texts -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Her Gün"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?android:attr/textColorSecondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Sabah - Öğle - Akşam"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?android:attr/textColorSecondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Tok Karnına"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?android:attr/textColorSecondary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </ScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_button_caregiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_caregiver"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/person_pin_circle_24px" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_caregiver"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/holo_blue_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_menu"
        app:itemIconSize="36dp"
        app:itemTextColor="@android:color/white"
        app:itemIconTint="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
