<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="8dp"
    android:background="@android:color/darker_gray"
    android:gravity="center"
    android:layout_gravity="center">

    <EditText
        android:id="@+id/etEmail"
        android:hint="Medicine Name"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:padding="14dp"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/medication_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="false" >

        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:padding="8dp"
            android:text="Ptesi"
            />
        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:padding="8dp"
            android:text="Salı"
            />
        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:padding="8dp"
            android:text="Çarş"
            />
        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:padding="8dp"
            android:text="Perş"
            />
        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:padding="8dp"
            android:text="Cuma"
            />
        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:padding="8dp"
            android:text="Ctesi"
            />
        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:padding="8dp"
            android:text="Pazar"
            />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/medication_dayParts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="false" >

        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/morning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:padding="8dp"
            android:text="Sabah"
            />
        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/afternoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:padding="8dp"
            android:text="Öğle"
            />
        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/evening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:padding="8dp"
            android:text="Akşam"
            />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/medication_usage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true" >

        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/hungry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:padding="8dp"
            android:text="Aç Karnına"
            />
        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:padding="8dp"
            android:text="Tok Karnına"
            />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <EditText
        android:id="@+id/medicine_count"
        android:hint="Kapsül Sayısı"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:padding="14dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/button_popup_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kaydet" />

        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/button_popup_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="İptal" />

    </LinearLayout>

</LinearLayout>

